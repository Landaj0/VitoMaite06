<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>indexServlet</servlet-name>
        <servlet-class>Servlet.indexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResultadoBusquedaLogueado</servlet-name>
        <servlet-class>Servlet.ResultadoBusquedaLogueadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusquedaLogueado</servlet-name>
        <servlet-class>Servlet.BusquedaLogueadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusquedaNoLogueado</servlet-name>
        <servlet-class>Servlet.BusquedaNoLogueadoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>Servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BusquedaPorAficiones</servlet-name>
        <servlet-class>Servlet.BusquedaPorAficiones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MiPerfilServlet</servlet-name>
        <servlet-class>Servlet.MiPerfilServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarPerfilServlet</servlet-name>
        <servlet-class>Servlet.ModificarPerfilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModificarPerfilServlet</servlet-name>
        <url-pattern>/ModificarPerfilServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MiPerfilServlet</servlet-name>
        <url-pattern>/MiPerfilServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusquedaPorAficiones</servlet-name>
        <url-pattern>/BusquedaPorAficiones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusquedaNoLogueadoServlet</servlet-name>
        <url-pattern>/BusquedaNoLogueadoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>indexServlet</servlet-name>
        <url-pattern>/indexServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultadoBusquedaLogueado</servlet-name>
        <url-pattern>/ResultadoBusquedaLogueadoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BusquedaLogueado</servlet-name>
        <url-pattern>/BusquedaLogueadoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
